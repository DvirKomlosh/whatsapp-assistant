{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "ESNext",
            "dom"
        ],
        "outDir": "dist",
        "removeComments": true,
        "target": "ES5",
        "baseUrl": "./",
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "sourceRoot": "/",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}